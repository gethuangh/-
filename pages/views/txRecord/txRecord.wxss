.txRecord-top {
    margin-top: 20rpx;
    justify-content: space-between;
    align-items: center;
    height: 126rpx;
    background: linear-gradient(90deg, #FFB41D 0%, #FFC523 100%);
    box-shadow: 0rpx 20rpx 30rpx 0rpx rgba(254, 177, 45, 0.2);
    border-radius: 24rpx;
    box-sizing: border-box;
    padding: 0 32rpx;
}

.txRecord-top-left {
    font-size: 36rpx;
    font-weight: 400;
    color: #FFFFFF;
}

.txRecord-top-right {
    font-size: 40rpx;
    font-weight: 400;
    color: #FFFFFF;
}

.txRecord-cont {
    margin-top: 45rpx;
}

.txRecord-item {
    margin-bottom: 30rpx;
    background: #FFFFFF;
    box-shadow: 0px 0px 24rpx 0px rgba(6, 0, 1, 0.09);
    border-radius: 24rpx;
    box-sizing: border-box;
    padding: 24rpx 30rpx 32rpx;
}

.txRecord-item-title {
    justify-content: space-between;
    margin-bottom: 40rpx;
}

.txRecord-title-left {
    font-size: 30rpx;
    font-weight: 400;
    color: #333333;
}

.txRecord-title-right {
    font-size: 32rpx;
    font-weight: 400;
    color: #FFAE14;
}

.txRecord-item-time {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.txRecord-item-left>image {
    width: 25rpx;
    height: 25rpx;
    margin-top: 6rpx;
    margin-right: 12rpx;
}