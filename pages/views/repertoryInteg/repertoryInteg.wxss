/* 积分盒子 */
.consume-box {
    width: 100%;
    padding: 36rpx 44rpx;
    box-sizing: border-box;
    /* height: 240rpx; */
    background: linear-gradient(90deg, #FFB41D 0%, #FFC523 100%);
    box-shadow: 0rpx 20rpx 30rpx 0rpx rgba(254, 177, 45, 0.2);
    border-radius: 24rpx;
    align-items: center;
    justify-content: space-between;
}

.consume-top {
    font-size: 30rpx;
    font-weight: 600;
    color: #FFFFFF;
}

.consume-num {
    font-size: 52rpx;
    font-weight: 600;
    color: #FFFFFF;
    margin-top: 20rpx;
}

.consume-bot {
    font-size: 24rpx;
    font-weight: 400;
    color: #FFFFFF;
    margin-top: 40rpx;
}

.consume-right-cont {
    border: 1px solid #FFFFFF;
    border-radius: 27rpx;
    width: 152rpx;
    text-align: center;
    line-height: 56rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #FFFFFF;
    align-items: center;
}

.consume-right-cont>image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
    margin-left: 23rpx;
}


/* 充值记录 */
.record-box {
    margin-top: 42rpx;

}

.record-top {
    font-size: 30rpx;
    font-weight: 400;
    color: #333333;
    margin-left: 37rpx;
}

.record-cont {
    margin-top: 18rpx;
    background: #FFFFFF;
    box-shadow: 0px 0px 24rpx 0rpx rgba(6, 0, 1, 0.09);
    border-radius: 24rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.record-item {
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    margin-bottom: 20rpx;
}

.record-left-text {
    margin-left: 63rpx;
}

.record-left-num {
    font-size: 36rpx;
    font-weight: 600;
    color: #333333;
}

.record-left-ts {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 10rpx;
}

.record-right-time {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 55rpx;
}

.record-item-img>image {
    width: 58rpx;
    height: 28rpx;
}

.record-item-left {
    align-items: center;
}