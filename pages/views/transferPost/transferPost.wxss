.transferPost-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333333;
    margin-left: 36rpx;
    margin-top: 20rpx;
}

.transferPost-cont {

    background: #FFFFFF;
    box-shadow: 0px 0px 24px 0px rgba(6, 0, 1, 0.09);
    border-radius: 24px;
    height: 120rpx;
    line-height: 120rpx;
    margin-top: 18rpx;
    align-items: center;
}

.transferPost-cont-name {
    margin-left: 44rpx;

    font-size: 30rpx;
    font-weight: 600;
    color: #333333;
}

.input-placeholder {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
}

.transferPost-cont-inpt {
    margin-left: 48rpx;
}

.transferPost-btn {
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    background: #FFC50A;
    box-shadow: 0rpx 20rpx 30rpx 0rpx rgba(254, 177, 45, 0.2);
    border-radius: 45rpx;

    font-size: 32rpx;
    font-weight: 600;
    color: #5B2F04;
    margin-top: 130rpx;
}

/* 弹窗 */
.popUp {
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 999;
    background: rgba(000, 000, 000, .5);
}

.pop-cont {
    width: 551rpx;
    height: 330rpx;
    background: #FFFFFF;
    border-radius: 30rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -275rpx;
    margin-top: -245rpx;
    text-align: center;
}

.pop-cont>image {
    width: 160rpx;
    height: 159rpx;
    margin-top: 44rpx;
}

.pop-ok {
    font-size: 36rpx;
    font-weight: 600;
    color: #FFC422;
    position: absolute;
    top: 161rpx;
    left: 168rpx;
}

.pop-text {
    margin-top: 26rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #999999;
}