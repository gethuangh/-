/* 记录 */
.record-box {
    margin-top: 42rpx;

}

.record-top {
    font-size: 30rpx;
    font-weight: 400;
    color: #333333;
    margin-left: 37rpx;
}

.record-cont {
    margin-top: 18rpx;
    background: #FFFFFF;
    box-shadow: 0px 0px 24rpx 0rpx rgba(6, 0, 1, 0.09);
    border-radius: 24rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.record-item {
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    margin-bottom: 20rpx;
}

.record-left-text {
    margin-left: 63rpx;
}

.record-left-num {
    font-size: 36rpx;
    font-weight: 600;
    color: #333333;
}

.record-left-ts {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 10rpx;
}

.record-right-time {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 55rpx;
}

.record-item-img {}

.record-item-img>image {
    width: 58rpx;
    height: 28rpx;
}

.record-item-left {
    align-items: center;
}