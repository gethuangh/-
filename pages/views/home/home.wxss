/* 头部 输入框部分 */
.home-input {
    align-items: center;
    margin-top: 10rpx;
}

.home-box {
    width: 100%;
    padding: 0 36rpx;
    box-sizing: border-box;
}

.home-input-gps {
    font-size: 32rpx;
    font-weight: 500;
    color: #010101;
    font-weight: 600;
}

.home-input-gps image {
    width: 24rpx;
    height: 14rpx;
    margin-left: 15rpx;
    margin-right: 27rpx;
    margin-top: -15rpx;
}

.home-input-input {
    position: relative;
}

.home-input-input image {
    position: absolute;
    top: 22rpx;
    left: 30rpx;
    width: 22rpx;
    height: 22rpx;
}

.home-input-input input {
    border: 1rpx solid rgba(0, 0, 0, 0.18);
    width: 461rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.18);
    padding: 0 60rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.home-input-code image {
    width: 44rpx;
    height: 44rpx;
    margin-left: 31rpx;
    margin-top: 10rpx;
}

/* 轮播图 */
.home-swiper {
    border-radius: 20rpx;
    width: 100%;
    margin-top: 35rpx;
}

.slide-image {
    width: 670rpx;
    height: 280rpx;
}

/* 按钮 */
.home-btn {
    margin-top: 22rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #000000;
    text-align: center;
}

.home-btn-item {
    flex: 1;
}

.btn-item-img image {
    width: 92rpx;
    height: 79rpx;
}

.btn-item-img1 image {
    width: 87rpx;
    height: 79rpx;
}

.btn-item-img2 image {
    width: 83rpx;
    height: 79rpx;
}

.btn-item-img3 image {
    width: 80rpx;
    height: 80rpx;
}

/* 广告 */
.home-adver {
    margin-top: 45rpx;
    text-align: center;
}

.home-adver-img {
    border-radius: 20rpx;
    height: 180rpx;
    overflow: hidden;
}

.home-adver-img image {
    height: 180rpx;
}

.home-adver-text {
    margin-top: 20rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
}

.adver-num {
    font-size: 30rpx;
    font-weight: 400;
    color: #FE9633;
}

/* 新闻资讯 */
/* 头部 */
.home-news-top {
    width: 100%;
    justify-content: space-between;
    align-items: baseline;
    margin-top: 40rpx;
}

.news-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000000;
}

.news-more {
    font-size: 22rpx;
    font-weight: 500;
    color: #999999;
}

.news-more image {
    width: 10rpx;
    height: 18rpx;
}

.home-news-box {
    /* width: auto; */
    padding-left: 36rpx;
}

.news-more-item {
    /* margin-left: 36rpx; */
    margin-right: 20rpx;
    margin-top: 23rpx;
    width: 570rpx;
    height: 280rpx;
    overflow: hidden;
    border-radius: 20rpx;
    display: inline-block;
    position: relative;
}

/* 横幅 */
.scroll-view_H {
    white-space: nowrap;
}

.news-more-item image {
    width: 570rpx;
    height: 280rpx;
    position: absolute;
}

.news-textbox {
    position: absolute;
    bottom: 20rpx;
    left: 23rpx;
}

.news-text-title {
    font-size: 30rpx;
    font-weight: 400;
    color: #FFFFFF;
    width: 520rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.news-text {
    margin-top: 28rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: #FFFFFF;
    opacity: 0.8;
    align-items: baseline;
}

.news-text text {
    display: block;
    margin-right: 14rpx;
}

/* 企业资讯 */
.home-tabBox {
    margin-top: 37rpx;
}

.home-tab-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000000;
}

.tab-title-text {
    margin-right: 41rpx;
    position: relative;
}

/* 企业资讯item */
.home-tab-item {
    margin-top: 34rpx;
    margin-bottom: 40rpx;
}

.tab-item-left {
    width: 220rpx;
    height: 110rpx;
    margin-right: 25rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.tab-item-left image {
    width: 220rpx;
    height: 110rpx;
}

.tab-right-title {
    font-size: 28rpx;
    font-weight: 500;
    width: 425rpx;
    color: #333333;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.tab-right-text {
    font-size: 20rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 10rpx;
}

.tab-right-text text {
    margin-right: 10rpx;
}

/* 选中的样式 */
.tab-action::after {
    content: "";
    position: absolute;
    bottom: -2rpx;
    left: 0;
    width: 120rpx;
    height: 14rpx;
    background: linear-gradient(90deg, #FECB2D 0%, #FFFFFF 100%);
    border-radius: 7rpx;
    opacity: .8;
    z-index: -1;
}



.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 2rpx;
}

.swiper-box .wx-swiper-dot {
    width: 20rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 4rpx;
    justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: rgba(255, 255, 255, 0.8);
    /* border-radius: 8rpx */
    border-radius: 50rpx;
}

.swiper-box .wx-swiper-dot-active::before {
    background: #FFC629;
}