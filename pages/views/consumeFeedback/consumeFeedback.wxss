/* 积分盒子 */
.consume-box {
    width: 100%;
    padding: 36rpx 44rpx;
    box-sizing: border-box;
    /* height: 240rpx; */
    background: linear-gradient(90deg, #FFB41D 0%, #FFC523 100%);
    box-shadow: 0rpx 20rpx 30rpx 0rpx rgba(254, 177, 45, 0.2);
    border-radius: 24rpx;
    align-items: center;
    justify-content: space-between;
}

.consume-top {
    font-size: 30rpx;
    font-weight: 600;
    color: #FFFFFF;
}

.consume-num {
    font-size: 52rpx;
    font-weight: 600;
    color: #FFFFFF;
    margin-top: 20rpx;
}

.consume-bot {
    font-size: 24rpx;
    font-weight: 400;
    color: #FFFFFF;
    margin-top: 40rpx;
}

.consume-right-cont {
    border: 1px solid #FFFFFF;
    border-radius: 27rpx;
    width: 152rpx;
    text-align: center;
    line-height: 56rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #FFFFFF;
    align-items: center;
}

.consume-right-cont>image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
    margin-left: 23rpx;
}



/* 白积分距离 */
.whitebox {
    margin-top: 20rpx;
}

.redbox {
    margin-top: 50rpx;
}

.consume-remain {
    margin-top: 89rpx;
    width: 100%;
    justify-content: space-between;
    height: 169rpx;
    background: #FFFFFF;
    box-shadow: 0px 0px 24rpx 0px rgba(6, 0, 1, 0.09);
    border-radius: 24rpx;
    position: relative;
}

.consume-remain ::before {
    content: "";
    position: absolute;
    top: 28rpx;
    left: 338rpx;
    width: 2rpx;
    height: 114rpx;
    background: #F4F4F4;
}

.consume-remain-cont {
    flex: 1;
    text-align: center;
    font-size: 36rpx;
    font-weight: 400;
    color: #333333;
    margin-top: 40rpx;

}

.remain-bot {
    margin-top: 31rpx;
}

.consume-text {
    text-align: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 46rpx;
    margin-bottom: 60rpx;
}