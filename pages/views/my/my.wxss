/* 信息部分 */
.my-user {
    margin-top: 30rpx;
    justify-content: space-between;
}

.user-img {
    position: relative;
}

.user-img>image {
    width: 102rpx;
    height: 102rpx;
}

.user-id {
    width: 94rpx;
    height: 27rpx;
    line-height: 27rpx;
    background: linear-gradient(0deg, #FFA930 0%, #FFBF38 100%);
    border-radius: 14rpx;
    font-size: 18rpx;
    font-weight: 400;
    color: #333333;
    text-align: center;
    position: absolute;
    bottom: -4rpx;
    left: 1rpx;
}

.user-ids {
    width: 94rpx;
    height: 27rpx;
    line-height: 27rpx;
    background: linear-gradient(0deg, #000000 0%, #7F7F7F 100%);
    border-radius: 14rpx;
    font-size: 18rpx;
    color: #FFFFFF;
    text-align: center;
    position: absolute;
    bottom: -4rpx;
    left: 1rpx;
}

.user-name {
    margin-left: 21rpx;
    margin-top: 12rpx;
}

.user-names {
    font-size: 30rpx;
    font-weight: 500;
    color: #333333;
}

.user-nametext {
    font-size: 22rpx;
