.my-item {

    background: #FFFFFF;
    box-shadow: 0px 0px 24rpx 0px rgba(6, 0, 1, 0.09);
    border-radius: 24rpx;
    padding: 30rpx 20rpx;
    box-sizing: border-box;
}

.my-left>image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.my-right {
    margin-left: 24rpx;
}

.my-right-img>image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 24rpx;
    margin-right: 14rpx;
    margin-top: 34rpx;
}

.my-right-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #1A1A1A;
    width: 357rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.my-right-text {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 8rpx;
}

.care-item {
    font-size: 20rpx;
    font-weight: 400;
    color: #FF6630;
    margin-right: 50rpx;
    margin-top: 38rpx;
}