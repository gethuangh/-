/* 头部 输入框部分 */
.home-input {
    align-items: center;
    margin-top: 10rpx;
}

.home-box {
    width: 100%;
    padding: 0 36rpx;
    box-sizing: border-box;
}

.home-input-gps {
    font-size: 32rpx;
    font-weight: 500;
    color: #010101;
    font-weight: 600;
}

.home-input-gps image {
    width: 24rpx;
    height: 14rpx;
    margin-left: 15rpx;
    margin-right: 27rpx;
    margin-top: -15rpx;
}

.home-input-input input {
    border: 1rpx solid rgba(0, 0, 0, 0.18);
    width: 461rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.18);
}

.home-input-code image {
    width: 44rpx;
    height: 44rpx;
    margin-left: 31rpx;
    margin-top: 10rpx;
}

/* 轮播图 */
.home-swiper {
    height: 280rpx;
    border-radius: 20rpx;
    width: 100%;
    border: 1px solid red;
    margin-top: 30rpx;
}

/* 按钮 */
.home-tab {
    margin-top: 42rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #000000;
    text-align: center;
}

.home-tab-item {
    flex: 1;
}

.tab-item-img image {
    width: 92rpx;
    height: 79rpx;
}

.tab-item-img1 image {
    width: 87rpx;
    height: 79rpx;
}

.tab-item-img2 image {
    width: 83rpx;
    height: 79rpx;
}

.tab-item-img3 image {
    width: 80rpx;
    height: 80rpx;
}

/* 广告 */
.home-adver {
    margin-top: 45rpx;
    text-align: center;
}

.home-adver-img {
    height: 180rpx;
    border-radius: 20rpx;
    border: 1px solid red;
}

.home-adver-text {
    margin-top: 20rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
}

.adver-num {
    font-size: 30rpx;
    font-weight: 400;
    color: #FE9633;
}

